    .hamburger {
        transform: scale(.7);
        display: none;
        cursor: pointer;
    }

    .hamburger .line {
        display: block;
        width: 40px;
        height: 5px;
        margin-bottom: 10px;
        background-color: #000000;
    }
    @media only screen and (max-width: 950px) {
        .hamburger {
            display: block;
        }
        .right {
            display: none;
        }
        .right.opened {
            display: flex;
            position: absolute;
            top: 68px;
            min-height: 100vh;
            flex-direction: column;
            background: #f6f6f6;
            left: 0;
            right: 0;
            padding: 2rem 0;
        }
	}


</style>